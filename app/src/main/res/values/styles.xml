<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialSheetFab.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp</item>
        <item name="android:src">@drawable/ic_add_black_24dp</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="android:background">@color/pink</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/pink</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="android:textColorHighlight">@color/pink</item>
        <item name="android:textColorLink">@color/pink</item>
        <item name="android:textColor">@color/pink</item>

    </style>
    <style name="EditTextThemeReg" parent="android:Widget">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>
